{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch index.html in Chrome",
      "file": "${workspaceFolder}/main/${input:htmlFile}",
      "webRoot": "${workspaceFolder}/main"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "htmlFile",
      "description": "Select the HTML file to launch",
      "options": [
        "index.html"
      ]
    }
  ]
}